---
interface Props {
   images: string[];
   name: string;
}
let { images, name } = Astro.props;
---

<div class="flex flex-col gap-x-5 md:flex-row md:items-start">
   <img
      src={images?.[0] ?? '/images/no-image.png'}
      alt={name}
      class="main-image rounded-md object-contain md:order-2 md:w-8/12 lg:w-9/12"
      height={500}
      width={500}
   />
   <div class="mt-3 flex w-fit items-center justify-start gap-2 overflow-y-auto md:order-1 md:mt-0 md:h-96 md:w-4/12 md:flex-col lg:w-3/12">
      {
         images?.map((item, index) => {
            return <img src={item} alt={name} class="sub-image aspect-square h-28 w-28 rounded-md object-contain" height={300} width={300} />;
         })
      }
   </div>
</div>
