---
import { FaFacebook, FaYoutube, FaInstagram, FaTiktok } from 'react-icons/fa6';
import Frontend from '@/models/Frontend';
import type { FrontendObjType } from '@/utils/types';
let frontend: FrontendObjType | null = await Frontend.findOne();
---

<!-- component -->
<footer
  class="rounded-t-xl bg-[#1A1A1A] pb-16 text-gray-300"
  aria-labelledby=" footer-heading"
>
  <div class="container">
    <div class="py-16">
      <div class="grid grid-cols-1 gap-8 md:grid-cols-12">
        <div class="col-span-1 space-y-5 md:col-span-5">
          <img
            src={frontend?.logo || '/images/no-image.png'}
            alt="logo"
            height="50"
            width="50"
          />
          <p class="leading-12 text-sm text-gray-400">
            {frontend?.description}
          </p>
          <div class="flex space-x-6">
            <div class="flex items-center justify-between gap-4">
              {
                frontend?.youtube && (
                  <a href={frontend?.youtube} target="_blank" rel="noreferrer">
                    <FaYoutube className="h-6 w-6 text-red-500" />
                  </a>
                )
              }
              {
                frontend?.facebook && (
                  <a href={frontend?.facebook} target="_blank" rel="noreferrer">
                    <FaFacebook className="h-6 w-6 text-blue-500" />
                  </a>
                )
              }

              {
                frontend?.instagram && (
                  <a
                    href={frontend?.instagram}
                    target="_blank"
                    rel="noreferrer"
                  >
                    <FaInstagram className="h-6 w-6 text-red-500" />
                  </a>
                )
              }
              {
                frontend?.tiktok && (
                  <a href={frontend?.tiktok} target="_blank" rel="noreferrer">
                    <FaTiktok className="h-6 w-6 text-red-500" />
                  </a>
                )
              }
            </div>
          </div>
          <p class="">
            Need help? Call us:
            {
              frontend?.phoneNumber?.map((number, index) => (
                <span class="px-2 text-primary" key={index}>
                  {number}
                </span>
              ))
            }
          </p>
        </div>
        <div class="col-span-1 w-full md:col-span-7">
          <div class="grid grid-cols-2 md:grid-cols-4 md:gap-8">
            <div>
              <h3 class="text-lg font-semibold leading-6 text-primary">
                My Account
              </h3>
              <ul role="list" class="mt-6 space-y-4">
                <li>
                  <a
                    href="/user/orders"
                    class="text-sm leading-6 text-gray-600 hover:text-gray-900"
                  >
                    My Orders
                  </a>
                </li>
                <li>
                  <a
                    href="/customer/profile?redirect=/customer/orders"
                    class="text-sm leading-6 text-gray-600 hover:text-gray-900"
                  >
                    My Profile
                  </a>
                </li>
                <li>
                  <a
                    href="/cart"
                    class="text-sm leading-6 text-gray-600 hover:text-gray-900"
                  >
                    Cart
                  </a>
                </li>
              </ul>
            </div>
            <div>
              <h3 class="text-lg font-semibold leading-6 text-primary">
                AboutUs
              </h3>
              <ul role="list" class="mt-6 space-y-4">
                <li>
                  <a
                    href="/about-us"
                    class="text-sm leading-6 text-gray-600 hover:text-gray-900"
                  >
                    About Us
                  </a>
                </li>
              </ul>
            </div>
            <div class="mt-10 md:mt-0">
              <h3 class="text-lg font-semibold leading-6 text-primary">
                Services
              </h3>
              <ul role="list" class="mt-6 space-y-4">
                <li>
                  <a
                    href="/customer-service"
                    class="text-sm leading-6 text-gray-600 hover:text-gray-900"
                  >
                    Customer Service
                  </a>
                </li>

                <li>
                  <h3 class="font-semibold leading-6">Payment Partners</h3>
                  <p class="my-2">SSL Commerz</p>
                  <img
                    src="https://cdn-images.decodeit.org/development/like-telecoms/taazpaymentbrands-1715485439834.webp"
                    alt="SSL Commerz"
                    class="mt-1 w-full rounded-lg"
                  />
                </li>
              </ul>
            </div>
            <div class="mt-10 md:mt-0">
              <h3 class="text-lg font-semibold leading-6 text-primary">
                Helps
              </h3>
              <ul role="list" class="mt-6 space-y-4">
                <li>
                  <a
                    href="/privacy-policy"
                    class="text-sm leading-6 text-gray-600 hover:text-gray-900"
                  >
                    Privacy Policy
                  </a>
                </li>
                <li>
                  <a
                    href="/terms-of-service"
                    class="text-sm leading-6 text-gray-600 hover:text-gray-900"
                  >
                    Terms of Conditions
                  </a>
                </li>

                <li>
                  <a
                    href="/admin"
                    class="text-sm leading-6 text-gray-600 hover:text-gray-900"
                  >
                    Admin Login
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="flex items-center justify-between border-t border-primary py-4">
      <p class="text-xs leading-5">
        &copy; {frontend?.name}, Inc. All rights reserved.
      </p>
      <p>
        IT partner - <a
          href="https://www.decodeit.org"
          class="text-primary underline hover:text-gray-500"
        >
          Decode-IT
        </a>
      </p>
    </div>
  </div>
</footer>
